
  <!--検索対象モデルがUserの時 -->
  <% if @range == "User" %>
  <h3>Book search for "<%= @word %>"</h3>
  <table class="table table-hover table-inverse">
  <thead>
    <tr>
      <th>image</th>
      <th>name</th>
      <th>introduction</th>
      <th colspan="3"></th>
    </tr>
  </thead>
    <tbody>
      <% @users.each do |user| %>
        <tr>
          <td><%= image_tag user.get_profile_image(80,80) %></td>
          <td><%= link_to user.name, user %></td>
          <td><%= user.introduction %></td>
        </tr>
      <% end %>
    </tbody>
  <% else %>
    <!--検索対象モデルがUserではない時(= 検索対象モデルがBookの時) -->
  <h3>User search for "<%= @word %>"</h3>
  <table class="table table-hover table-inverse">
  <thead>
    <tr>
      <th></th>
      <th>title</th>
      <th>opinion</th>
      <th colspan="3"></th>
    </tr>
  </thead>
  <tbody>
     <% @books.each do |book| %>
      <tr>
        <td><%= image_tag book.user.get_profile_image(80,80) %></td>
        <td><%= link_to book.title,book %></td>
        <td><%= book.body %></td>
      </tr>
      <% end %>
  </tbody>
  <% end %>
</table>
