<table class='table'>
    <thead>
      <tr>
        <th>image</th>
        <th>name</th>
        <th colspan="3"></th>
      </tr>
    </thead>
    <tbody>
      <% if users.exists? %>
      <% users.each do |user| %>
      <tr>
        <th><%= image_tag user.get_profile_image(100,100) %></th>
        <td><%= user.name %></td>
        <td>フォロー数: <%= user.followings.count %></td>
        <td>フォロワー数: <%= user.followers.count %></td>
        <td><%= link_to 'show', user %></td>
      </tr>
      <% end %>
      <% else %>
        <p>ユーザーはいません</p>
      <% end %>
    </tbody>
</table>
