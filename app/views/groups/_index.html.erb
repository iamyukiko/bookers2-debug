<table class='table table-hover table-inverse'>
  <thead>
    <tr>
      <th></th>
      <th>グループ名</th>
      <th>紹介文</th>
      <th>メンバー</th>
      <th></th>
      <th></th>
    </tr>
  </thead>
  <% groups.each do |group| %>
  <tbody>
      <tr>
        <td><%= image_tag group.get_image, size: "80x80" %></td>
        <td><%= link_to group.name, group_path(group.id) %></td>
        <td><%= group.introduction %></td>
        <td><%= group.users.count %></td>
        <% if group.owner_id == current_user.id %>
        <td><%= link_to 'Edit', edit_group_path(group), class: "btn btn-sm btn-success" %></td>
        <td><%= link_to 'Notice an Event', group_new_mail_path(group), class: "btn btn-primary" %></td>
        <% end %>
      </tr>
   </tbody>
  <% end %>
</table>
